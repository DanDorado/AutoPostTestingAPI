FROM alpine:3

COPY /Postman/Test.sh /Postman/Test.sh
COPY /Postman/PostmanEnvironments/* /Postman/PostmanEnvironments/
COPY /Postman/TestCollections/* /Postman/TestCollections/

WORKDIR /Postman

RUN apk add --update nodejs nodejs-npm bash

RUN npm install -g newman
RUN npm install -g newman-reporter-junitfull

CMD ./Test.sh